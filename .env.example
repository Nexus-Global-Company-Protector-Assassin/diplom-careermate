# ====================================
# CareerMate Environment Configuration
# ====================================

# Node Environment
NODE_ENV=development

# ====================================
# Database (PostgreSQL)
# ====================================
POSTGRES_USER=careermate
POSTGRES_PASSWORD=careermate_dev_pass
POSTGRES_DB=careermate_dev
POSTGRES_PORT=5432
DATABASE_URL=postgresql://careermate:careermate_dev_pass@localhost:5432/careermate_dev?schema=public

# ====================================
# Redis (Cache & Queue)
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=careermate_redis_pass
REDIS_URL=redis://:careermate_redis_pass@localhost:6379

# ====================================
# API Configuration
# ====================================
API_PORT=3001
API_PREFIX=api/v1
API_URL=http://localhost:3001

# ====================================
# Frontend Configuration
# ====================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-me-in-production

# ====================================
# JWT Authentication
# ====================================
JWT_SECRET=your-jwt-secret-change-me-in-production
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# ====================================
# OAuth Providers
# ====================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ====================================
# AI Services
# ====================================
# Custom LLM Model
AI_MODEL_ENDPOINT=https://your-ai-model-endpoint.com
AI_MODEL_API_KEY=your-ai-model-api-key
AI_MODEL_TIMEOUT=60000

# OpenAI (Fallback/Alternative)
OPENAI_API_KEY=your-openai-api-key

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=careermate-vectors

# ====================================
# Object Storage (S3 / R2 / MinIO)
# ====================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=careermate-storage

# Or Cloudflare R2
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=careermate-storage

# Or MinIO (Local Development)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=careermate-local

# ====================================
# Email Service
# ====================================
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@careermate.com
SENDGRID_FROM_NAME=CareerMate

# Or AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@careermate.com

# Or SMTP (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@careermate.com

# ====================================
# Job Boards APIs
# ====================================
# HeadHunter (HH.ru)
HH_API_KEY=your-hh-api-key
HH_API_URL=https://api.hh.ru

# LinkedIn API
LINKEDIN_API_KEY=your-linkedin-api-key

# Indeed API
INDEED_PUBLISHER_ID=your-indeed-publisher-id

# ====================================
# Monitoring & Analytics
# ====================================
# Sentry
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Datadog (Optional)
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ====================================
# Development Tools
# ====================================
# PgAdmin
PGADMIN_EMAIL=admin@careermate.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Commander
REDIS_COMMANDER_PORT=8081

# MailHog
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# MinIO Console
MINIO_CONSOLE_PORT=9001

# ====================================
# Feature Flags
# ====================================
FEATURE_AUTO_APPLY=false
FEATURE_MOCK_INTERVIEW=false
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# ====================================
# Security
# ====================================
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================================
# Logging
# ====================================
LOG_LEVEL=debug
LOG_FORMAT=json
