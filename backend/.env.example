# Application Configuration
APP_NAME=CareerMate Backend
APP_ENV=development
APP_PORT=3001
APP_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/careermate?schema=public

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=1h
REFRESH_JWT_SECRET=your-super-secret-refresh-jwt-key
REFRESH_JWT_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# AI/ML Configuration
AI_MODEL_ENDPOINT=https://api.example-llm.com/v1/chat/completions
AI_MODEL_API_KEY=your-ai-model-api-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=careermate-embeddings

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@careermate.com

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=careermate-storage
AWS_S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug